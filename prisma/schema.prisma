generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Size {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model categories {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @db.Date
  name       String
  updated_at DateTime @db.Date
}

model contacts {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @db.Date
  email      String
  message    String
  name       String
  updated_at DateTime @db.Date
}

model orderProducts {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  UnityPrice         String
  UnitySubTotalPrice String
  orderId            String @db.ObjectId
  productId          String @db.ObjectId
  productName        String
  quantityBought     Int
}

model orders {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  FinalPrice         String
  address            String
  addressCity        String
  addressDistrict    String
  addressNumber      Int
  complement         String
  cpf                String
  created_at         DateTime @db.Date
  deliveryStatus     Boolean
  deliveryStatusDone Boolean
  finishOrder        Boolean
  fullName           String
  paymentMethod      String
  phone              String
  status             Boolean
  updated_at         DateTime @db.Date
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  categoryId  String   @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  images      String[]
  name        String
  price       String
  quantity    Int
  sizeId      String   @db.ObjectId
  stock       Boolean
  updatedAt   DateTime @db.Date
}

model users {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  confirmPassword String
  created_at      DateTime @db.Date
  email           String
  name            String
  password        String
  updated_at      DateTime @db.Date
}
